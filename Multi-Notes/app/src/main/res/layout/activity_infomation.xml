<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_infomation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pavan.multi_notes.Infomation"
    android:background="@drawable/dark_version_activity_background">

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/tv_appName"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="144dp"
        app:layout_constraintTop_toTopOf="parent"
        android:textAppearance="@android:style/TextAppearance.Material.Headline"
        android:text="@string/app_name"
        android:textColor="@color/cardview_background"
        android:gravity="center_horizontal"
        app:layout_constraintHorizontal_bias="0.62" />

    <TextView
        android:text="@string/copyRightTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/tv_copyright"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textAppearance="@android:style/TextAppearance.Material.Headline"
        android:gravity="center_horizontal"
        android:textColor="@color/cardview_background"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_appName" />

    <TextView
        android:text="@string/versionTV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/tv_version"
        android:layout_marginStart="16dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:textAppearance="@android:style/TextAppearance.Material.Headline"
        android:textColor="@color/cardview_background"
        android:gravity="center_horizontal"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_copyright"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintVertical_bias="0.18" />
</android.support.constraint.ConstraintLayout>
